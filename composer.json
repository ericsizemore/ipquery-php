{
    "name": "esi/ipquery-php",
    "description": "PHP library for ipquery.io, a free and performant ip address API.",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "ericsizemore",
        "php",
        "api",
        "ip",
        "ipaddress",
        "ip-api",
        "ip-query",
        "ipquery-php"
    ],
    "authors": [
        {
            "name": "Eric Sizemore",
            "email": "admin@secondversion.com",
            "homepage": "https://www.secondversion.com"
        }
    ],
    "homepage": "https://github.com/ericsizemore/ipquery-php",
    "support": {
        "issues": "https://github.com/ericsizemore/ipquery-php/issues",
        "forum": "https://github.com/ericsizemore/ipquery-php/discussions",
        "source": "https://github.com/ericsizemore/ipquery-php/tree/main",
        "docs": "https://github.com/ericsizemore/ipquery-php",
        "rss": "https://github.com/ericsizemore/ipquery-php/releases.atom",
        "security": "https://github.com/ericsizemore/ipquery-php/security/policy"
    },
    "funding": [
        {
            "type": "custom",
            "url": "https://ko-fi.com/ericsizemore"
        },
        {
            "type": "github",
            "url": "https://github.com/ericsizemore"
        }
    ],
    "require": {
        "php": ">=8.3",
        "php-http/cache-plugin": "^2.0",
        "php-http/client-common": "^2.7",
        "php-http/discovery": "^1.20",
        "php-http/httplug": "^2.4",
        "psr/cache": "^2.0 || ^3.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory-implementation": "^1.0",
        "psr/http-message": "^2.0",
        "symfony/rate-limiter": "^7.3"
    },
    "require-dev": {
        "cache/filesystem-adapter": "^1.2",
        "dg/bypass-finals": "^1.9",
        "esi/phpunit-coverage-check": "^3.0",
        "friendsofphp/php-cs-fixer": "^3.87",
        "guzzlehttp/guzzle": "^7.10",
        "guzzlehttp/psr7": "^2.8",
        "nyholm/psr7": "^1.8",
        "php-http/mock-client": "^1.6",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.3",
        "psalm/plugin-phpunit": "^0.19",
        "rector/rector": "^2.1",
        "vimeo/psalm": "^6.13"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Esi\\IPQuery\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esi\\IPQuery\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "scripts": {
        "analyze": [
            "@clear-build",
            "@composer validate",
            "@phpunit",
            "@code-coverage",
            "@psalm:shepherd",
            "@phpstan"
        ],
        "clear-build": "rm -rf ./build/*",
        "code-coverage": "vendor/bin/coverage-check build/logs/clover.xml 100",
        "phpcs:check": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --dry-run --diff",
        "phpcs:fix": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon -vvv",
        "phpunit": "vendor/bin/phpunit",
        "phpunit:migrate": "@phpunit --migrate-configuration",
        "psalm": "vendor/bin/psalm -c psalm.xml --no-cache --show-info=true",
        "psalm:baseline": "@psalm --no-diff --set-baseline=psalm-baseline.xml",
        "psalm:ci": "@psalm --shepherd --report=results.sarif",
        "psalm:shepherd": "@psalm --no-diff --shepherd --stats",
        "refactor:check": "@refactor:fix --dry-run",
        "refactor:fix": "vendor/bin/rector process"
    }
}
